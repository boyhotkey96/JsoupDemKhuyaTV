<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:backgroundTintMode="screen"
        android:background="@drawable/sanco"
        android:layout_height="300px">

        <ImageView android:layout_weight="4"
            android:id="@+id/imgDoi1"
            android:layout_width="0dp"
            android:layout_height="300px"
            android:src="@mipmap/ic_launcher" />

        <TextView android:layout_weight="1"
            android:layout_width="0dp"
            android:text="VS"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#dfb10b"
            android:layout_height="300px" />

        <ImageView android:layout_weight="4"
            android:id="@+id/imgDoi2"
            android:layout_width="0dp"
            android:layout_height="300px"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:30"
                android:textColor="#f000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/01"
                android:textColor="#f000"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_weight="0.03"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTentran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hàn Quốc - Trung Quốc"
                android:textColor="#f000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvGiaidau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASIAN CUP 2019"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>